            <tr class="details">
                <td>
                    @Model.CustomerName @Model.Surname<br />
                    @Model.CustomerPhone<br />
                    @Model.Email<br >
                    @*@Model.Address*@
                </td>

                <td>
                    @Model.PaymentType
                </td>
            </tr>

            <tr class="heading">
                <td>
                    Item &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
