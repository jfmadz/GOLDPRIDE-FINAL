@model UserRoles.Models.RegisterViewModel
@{
    ViewBag.Title = "Register Role";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<br />
<br />
<br />
<br />
<br />
<br />
<h2>Assign a role to a user</h2>


@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <br />
    <br />
    <br />
    <br />

    <hr />
   
    @Html.ValidationSummary("", new { @class = "text- danger" })
    <div class="form-group">
        @Html.Label("Select Username", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Username")
        </div>
    </div>

    <!--Select the role type for the user-->
    <div class="form-group">
        @Html.Label("Select Role to assign", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Name")
        </div>
    </div>
    <!--ends here-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn-default" value="Register" />
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

