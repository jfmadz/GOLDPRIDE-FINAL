@using PagedList;
@using PagedList.Mvc;
@model IPagedList<UserRoles.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<h2>Orders Listing</h2>


<li>@Html.ActionLink("Export Order Lisitng", "ExportingOrderListing")</li>

<form asp-controller="Order" asp-action="Index">


    <p>You may search by Order ID</p>
    <input type="text" name="SearchString" />
    <input type="submit" value="Filter" />



</form>

<table class="table">
    <tr>
        <th>
            Order ID
        </th>
        <th>
            Order Date
        </th>
        <th>
            Payment Type
        </th>

        <th>
            Customer Name
        </th>
        <th>
            Customer Surname
        </th>
        <th>
            Customer Phone
        </th>
        <th>
            Email
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
                @*@, @item.OrderDate)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentType)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>

                @*@Html.ActionLink("Details", "Details", new { id = item.OrderID }) |*@
                @Html.ActionLink("Details", "Cusdetails", new { id = item.OrderID }) |


            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = Request.QueryString["searchString"], search = Request.QueryString["search"] }),
  new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true, DisplayItemSliceAndTotal = true })