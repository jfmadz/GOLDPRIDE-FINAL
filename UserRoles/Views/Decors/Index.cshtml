@model IEnumerable<UserRoles.Models.Decor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<br />
<br />
<br />
<br />
<h2>Index</h2>
<br />
<form asp-controller="Decors" asp-action="Index">


    <p>You may search by Decor Name</p>
    <input type="text" name="SearchString" />
    <input type="submit" value="Filter" />



</form>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DecorName)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Category_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DecorName)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Category_Name)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @try
                {

                    var base64 = Convert.ToBase64String(item.Image);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                    <img src='@imgsrc' ("image1",new {id="Image" style="max-width:200px;max-height:200px" }) />
                    @*<img src='@imgsrc' style="max-width:200px;max-height:200px" />*@


                }
                catch
                {
                    if (item.Image == null)
                    {
                        <img width="200" height="200" src="https://ixxidesign.azureedge.net/media/2388044/marcus-kraft-12-dont-worry-be-happy-white.jpg?mode=max&width=562&height=749" />
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DecorCode }) |
                @Html.ActionLink("Details", "Details", new { id = item.DecorCode }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DecorCode })
            </td>
        </tr>
    }

</table>
