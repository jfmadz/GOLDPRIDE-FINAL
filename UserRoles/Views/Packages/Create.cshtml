@model UserRoles.Models.Package

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<script src="~/ckeditors/ckeditor.js"></script>
<script src="~/ckeditors/adapters/jquery.js"></script>
<br />
